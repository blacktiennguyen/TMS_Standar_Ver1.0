@model TMS.WebAPP.Models.MasterDataModel.ItemTypeModel
@{
    Layout = null;
    ViewBag.Title = @MessageManager.GetCaptionValueByKey("lblItemType");
}

<!-- Modal -->
<div class="modal fade" id="detailitemtype" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@MessageManager.GetCaptionValueByKey("lblItemType")</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-6">
                        <div class="form-group row">
                            <label class="col-md-4 control-label margin-top-8px">
                                @MessageManager.GetCaptionValueByKey("lblCode") <span class="star">(*)</span>
                            </label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @placeholder = @MessageManager.GetCaptionValueByKey("lblCode") })
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="form-group row">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <div class="form-group row">
                            <label class="col-md-4 control-label margin-top-8px">
                                @MessageManager.GetCaptionValueByKey("lblNameDefault") <span class="star">(*)</span>
                            </label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = @MessageManager.GetCaptionValueByKey("lblNameDefault") })
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="form-group row">
                            <label class="col-md-4 control-label margin-top-8px">
                                @MessageManager.GetCaptionValueByKey("lblNameLocalLanguage")
                            </label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.NameLL, new { @class = "form-control", @placeholder = @MessageManager.GetCaptionValueByKey("lblNameDefault") })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>