@using TMS.WebAPP.Framework.UI

@{
    //success messages
    var successMessages = new List<string>();
    if (TempData[string.Format("tms.notifications.{0}", NotifyType.Success)] != null)
    {
        successMessages.AddRange(TempData[string.Format("tms.notifications.{0}", NotifyType.Success)] as IList<string>);
    }
    if (ViewData[string.Format("tms.notifications.{0}", NotifyType.Success)] != null)
    {
        successMessages.AddRange(ViewData[string.Format("tms.notifications.{0}", NotifyType.Success)] as IList<string>);
    }

    //error messages
    var errorMessages = new List<string>();
    if (TempData[string.Format("tms.notifications.{0}", NotifyType.Error)] != null)
    {
        errorMessages.AddRange(TempData[string.Format("tms.notifications.{0}", NotifyType.Error)] as IList<string>);
    }
    if (ViewData[string.Format("tms.notifications.{0}", NotifyType.Error)] != null)
    {
        errorMessages.AddRange(ViewData[string.Format("tms.notifications.{0}", NotifyType.Error)] as IList<string>);
    }

    //warning messages
    var warningMessages = new List<string>();
    if (TempData[string.Format("tms.notifications.{0}", NotifyType.Warning)] != null)
    {
        warningMessages.AddRange(TempData[string.Format("tms.notifications.{0}", NotifyType.Warning)] as IList<string>);
    }
    if (ViewData[string.Format("tms.notifications.{0}", NotifyType.Warning)] != null)
    {
        warningMessages.AddRange(ViewData[string.Format("tms.notifications.{0}", NotifyType.Warning)] as IList<string>);
    }
}

@foreach (var message in successMessages)
{
    <div class="message alert alert-success alert-dismissable">
        <b class="message_title"><span class="fa fa-warning"></span> @MessageManager.GetCaptionValueByKey("lblAlert")</b>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <div class="row content_message">@message</div>
    </div>
}

@foreach (var message in errorMessages)
{
    <div class="message alert alert-danger alert-dismissable">
        <b class="message_title"><span class="fa fa-warning"></span> @MessageManager.GetCaptionValueByKey("lblAlert")</b>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <div class="row content_message">@message</div>
    </div>
}

@foreach (var message in warningMessages)
{
    <div class="message alert alert-warning alert-dismissable">
        <b class="message_title"><span class="fa fa-warning"></span> @MessageManager.GetCaptionValueByKey("lblAlert")</b>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <div class="row content_message">@message</div>
    </div>
}